<link
  rel="stylesheet"
  href="{{'gracias-deporte.scss' | asset_url }}"
  media="print"
  onload="this.media='all'">

<div class="container">
  <div class="wrapper">
    <div class="info-container">
      {{ section.settings.description }}   
    </div>
    <div class="image-container">
      <img class="img" src="{{ section.settings.image_logo | img_url: 'master' }}" width="100%"
        height="100%" alt="{{ section.settings.title | escape }}">
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Gracias Deporte",
    "tag": "section",
    "class": "section",
    "presets": [
      {
        "name": "Gracias Deporte",
        "category": "Custom content"
      }
    ],
    "settings": [
      {
      "type": "richtext",
      "id": "description",
      "label": "Texto Enriquecido"
      },
      {
      "type": "image_picker",
      "label": "Title Image",
      "id": "image_logo"
      }
    ]
    }
{% endschema %}