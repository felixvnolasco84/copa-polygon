          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<style>
      .quick-add__submit {
        height: 64px;
      }
      .copa-product-showcase {
        width: 100%;
        margin: 0 auto;
        font-family: ABCfina;
        padding: 36px 0;
      }

      .copa-product-grid-container {
        display: grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));
        gap: 25px;
        overflow: hidden;
      }

      .copa-product-models {
        position: relative;
        overflow: hidden;
        background-color: #f5f5f5;
        width: 100%;
        height: 100%;
        min-height: 100%;
        border-radius: 13px;
      }

      .copa-model-slide {
        display: none;
        width: 100%;
        height: 100%;
      }

      .copa-model-slide.active {
        display: block;
      }

      .copa-model-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 13px;
      }

      .copa-product-details {
        display: flex;
        padding: 2rem;
        flex-direction: column;
        justify-content: center;
        max-width: 100%;
        width: 100%;
        min-width: 100%;
        background-color: #f6f6f8;
        border-radius: 13px;
    }
      }

      .copa-product-carousel {
        position: relative;
      }

      .copa-product-slide {
        display: none;
      }

      .copa-product-slide.active {
        display: block;
      }

      .copa-product-swatch {
        display: grid;

        justify-items: center;
        padding-bottom: 2rem;
      }

      .copa-swatch-image {
        max-width: 60%;
        height: auto;
      }

      .copa-product-reviews {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding-bottom: 1rem;
      }

      .copa-stars {
        color: #999;
      }

      .copa-review-count {
        color: #565656;
      }

      .copa-product-title {
        text-transform: uppercase;
        font-weight: bold;
        padding-bottom: 0.5rem;
        letter-spacing: 0.05em;
        margin: 0;
      }

      .copa-product-subtitle {
        color: #565656;
        padding-bottom: 2rem;
        margin: 0;
      }

      .copa-button {
        display: inline-block;
        background-color: #fff;
        color: #333;
        border: 1px solid #ddd;
        padding: 0.75rem 1.5rem;
        border-radius: 2rem;
        text-decoration: none;
        font-size: 0.875rem;
        transition: all 0.3s;
      }

      .copa-button:hover {
        background-color: #f0f0f0;
      }

      .copa-pagination {
        padding-top: 3rem;
        text-align: right;
        font-weight: bold;
        font-size: 3rem;
        color: #565656;
      }


  @media (max-width: 480px) {

    .copa-product-info-mobile {
      padding: 2rem;
    }

    .copa-pagination {
      padding: 0 1rem !important;
    }

          .slick-slide {
        border-radius: 13px;
        background-color: #f6f6f8;
            margin-right: 10px;''
      }

    .copa-product-grid-container {
          display: none;
        }

    .mobile-carrousel {
      display: grid;
    }

  }

  @media (min-width: 481px) {



    .copa-product-grid-container {
          display: grid;
        }

    .mobile-carrousel {
      display: none !important;
    }

      .copa-model-image {
        border-radius: 13px 13px 0 0;
      }

  }

      @media (max-width: 768px) {



        .copa-product-showcase {
          min-width: 100%;
        }
        .copa-product-grid-container {
          grid-template-columns: 1fr;
          gap: 0 !important;
          min-width: 100%;
        }

        .copa-product-swatch
        {
          display: none;
        }

        .copa-swatch-image {
              max-width: 70%;
        }

        .copa-model-image {
          aspect-ratio: 1 / 1;
        }

        .copa-product-models {
          border-radius: 13px 13px 0 0;
        }

        .copa-product-details {
          padding: 1.5rem;
          border-radius: 0 0 13px 13px;
          overflow: initial !important;
        }

        .slick-slider {
          min-width: 100%;
        }

      }

    /* Make sure .copa-product-details is position: relative
     so .copa-product-carousel's absolute nav sits inside */
  .copa-product-details {
    position: relative;
    overflow: hidden; /* optional, to hide any overflow */
  }

  /* Position .copa-product-carousel nav absolutely */
  .copa-product-carousel {
    position: relative; /* anchor for nav */
    width: 100%;
  }



  .copa-product-details {
    position: relative;
    overflow: hidden;
  }

  .copa-product-carousel {
    position: relative;
    width: 100%;
    max-width: 100%;
  }

  .slick-track, .slick-list  {
    height: 100% !important;
  }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
      initShowCaseProductsCopa();
    });

    function initShowCaseProductsCopa() {

    $('.mobile-carrousel').slick({
    dots: false,
    infinite: false,
    speed: 300,
    slidesToShow: 1,
    slidesToScroll: 1,
  });

    $('.left-carrousel').slick({
    dots: false,
    infinite: false,
    arrows: false,
    speed: 300,
    asNavFor: '.right-carrousel',
    slidesToShow: 1,
    slidesToScroll: 1,
  });

    $('.right-carrousel').slick({
    dots: false,
    infinite: false,
    arrows: true,
    speed: 300,
    asNavFor: '.left-carrousel',
    slidesToShow: 1,
    slidesToScroll: 1,
  });

    }
</script>
