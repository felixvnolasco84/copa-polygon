<style>
  .App {
    align-items: center;
    justify-content: center;
    display: flex;
    gap: 25px;
    font-family: sans-serif;
  }

  .card {
    position: relative;
    width: 400px;
    height: 500px;
    border-radius: 13px;
    display: flex;
    align-items: flex-end;
    text-align: left;
    color: #444;
    overflow: hidden;
  }

  .card-bg {
    position: absolute;
    width: 100%;
    height: 100%;
    background-image: url("img/Copa-Gorra.jpg");
    background-position: center;    ;
    z-index: -1;
    object-fit: cover;
    transition-duration: 0.5s;
  }

  .card-product-img {
    position: absolute;
    width: 100%;
    height: 100%;
    background-image: url("img/V_FRENTE.png");
    background-position: center;
    background-size: cover;
    z-index: 0;
    transition-duration: 0.5s;
    opacity: 0;
    transform: scale(1.2);
  }

  .card-info {
    padding: 20px;
  }

  .card:hover .card-bg {
    transform: scale(1.2);
    transition-duration: 0.5s;
  }

  .card-button a {
    display: inline-block;
    background-color: white;
    padding: 10px 100px;
    color: #444;
    text-decoration: none;
    border-radius: 13px;
    font-size: 14px;
  }

  .card:hover .card-info {
    display: none;
  }

  .card:hover .card-button {
    opacity: 1;
    transition-duration: 0.5s;
  }

  .card:hover .card-product-img {
    opacity: 1;
    transform: scale(1);
    transition-duration: 0.5s;
  }
</style>