{% schema %}
{
  "name": "Social Navigation",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "you + rhode"
    }
  ],
  "blocks": [
    {
      "type": "social_link",
      "name": "Social Link",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Platform Name"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Social Navigation",
    }
  ]
}
{% endschema %}

<style>
  .social-navigation {
    padding: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    letter-spacing: -0.5px;
    font-size: max(1.375rem, 2.5vw);
    color: #565656;
    text-decoration: none;
  }

  .social-links {
    display: flex;
    gap: 2rem;
  }

  .social-link-item {
    list-style: none;
  }

  .social-link {
    text-decoration: none;
    color: #000;
    font-weight: 500;
    transition: opacity 0.3s ease;
  }

  .social-link:hover {
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .social-navigation {
      flex-direction: column;
      gap: 1.5rem;
      text-align: center;
    }

    .logo-text {
      font-size: 1.25rem;
    }

    .social-links {
      flex-wrap: wrap;
      justify-content: center;
      gap: 1rem;
    }
  }
</style>

<div class="social-navigation">
  <a href="/" class="logo-text">
    {{ section.settings.logo_text | replace: '+', '<span class="logo-plus">+</span>' }}
  </a>

  <ul class="social-links">
    {% for block in section.blocks %}
      <li class="social-link-item" {{ block.shopify_attributes }}>
        <a 
          href="{{ block.settings.url }}" 
          class="social-link"
          target="_blank"
          rel="noopener noreferrer"
        >
          {{ block.settings.title }}
        </a>
      </li>
    {% endfor %}
  </ul>
</div>