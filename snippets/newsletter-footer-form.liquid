
<div class="newsletter-footer-container">
    {% form 'customer', class: 'newsletter-form' %}
    <input type="hidden" name="contact[tags]" value="newsletter">
    <div class="newsletter-form__field-wrapper">
        <div class="field">
            <input id="NewsletterForm--{{ section.id }}" type="email" name="contact[email]" class="input-mail"
                value="{{ form.email }}" aria-required="true" autocorrect="off" autocapitalize="off" autocomplete="email" {% if
                form.errors %} autofocus aria-invalid="true" aria-describedby="Newsletter-error--{{ section.id }}" {% elsif
                form.posted_successfully? %} aria-describedby="Newsletter-success--{{ section.id }}" {% endif %}
                placeholder="Correo" required>            
            <button type="submit" class="input-mail-button" name="commit" id="Subscribe"
                aria-label="{{ 'newsletter.button_label' | t }}">
                SUSCR√çBETE
            </button>
        </div>
        {%- if form.errors -%}
        <small class="newsletter-form__message form__message" id="Newsletter-error--{{ section.id }}">{% render
            'icon-error' %}{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email']
            }}</small>
        {%- endif -%}
    </div>
    {%- if form.posted_successfully? -%}
    <h3 class="newsletter-form__message newsletter-form__message--success form__message"
        id="Newsletter-success--{{ section.id }}" tabindex="-1" autofocus>{% render 'icon-success' %}{{
        'newsletter.success' | t }}</h3>
    {%- endif -%}
    {% endform %}
</div>


<style>

    
    
    @media only screen and (min-width: 1600px) {
        .newsletter-footer-container {
            width: 80%;    
        }
        
    }

@media only screen and (max-width: 1599px) {
    .newsletter-footer-container {
        width: 95%;    
    }   
}


@media screen and (max-width: 750px) {
    .newsletter-footer-container {
        width: 100%;    
    }
}


.newsletter-footer-container .newsletter-form {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    max-width: none;    
}


.newsletter-footer-container .newsletter-form .newsletter-form__field-wrapper .field input {
    height: 100%;    
    color: gray;
    border-top-left-radius: 15px;
    border-bottom-left-radius: 15px;
    font-size: 16px;
    width: 70%;
    border: 1px solid #ffffff;
    font-family: "ABCfina";
    padding-left: 21px;
}

.newsletter-footer-container .newsletter-form .newsletter-form__field-wrapper {
    width: 100%;
}



.newsletter-footer-container .newsletter-form .newsletter-form__field-wrapper .field {
    align-items: center;
    gap: 5px;
    height: 90px;
}



  @media screen and (max-width: 749px) {
    .newsletter-footer-container .newsletter-form .newsletter-form__field-wrapper .field {
    height: 75px;
}
    
  }
  



.newsletter-footer-container .newsletter-form .newsletter-form__field-wrapper .field label {
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    padding: 0 20px;
    color: #575757;
    font-size: 20px;
    line-height: 124px;    
    letter-spacing: 0.1em;    
    pointer-events: none;
    transition: all 0.3s ease;
    cursor: text;
    z-index: 1;
}


.newsletter-footer-container .newsletter-form .newsletter-form__field-wrapper .field button {
    position: unset;
    height: 100%;    
    background-color: #ffffff;
    color: #575757;
    border-top-right-radius: 15px;
    border-bottom-right-radius: 15px;    
    width: 30%;
    font-size: 14px;
    font-family: "ABCfina";
    border: 1px solid #ffffff;


    &:hover {
        background-color: #575757;
        color: #ffffff;
        transition: all 0.3s ease;
    }
}

@media only screen and (max-width: 992px) {
    .newsletter-footer-container .newsletter-form .newsletter-form__field-wrapper .field button {
        font-size: 12px;
    }
}


@media only screen and (max-width: 768px) {
    .newsletter-footer-container .newsletter-form .newsletter-form__field-wrapper .field button {
        font-size: 10px;
    }
}

</style>